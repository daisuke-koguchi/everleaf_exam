<% if @task.errors.any? %>
  <div class="error-explanation">
    <h4><%= @task.errors.count%>件のエラーが有ります!</h4>
    <ul>
      <%= @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model:@task, local: true) do |form| %>
  <div class="task_name">
    <%= form.label :name ,'タスク名'%>
    <%= form.text_field :name %>
  </div>
  <div class="task_description">
    <%= form.label :description,'タスク詳細' %>
    <%= form.text_field :description %>
  </div>
  <div id="task_deadline">
    <%= form.label :deadline %>
    <%= form.date_select :deadline %>
  </div>
  <div id="task_status">
  <%= form.label :status %>
  <%= form.select :status,Task.statuses.keys.to_a%>
  </div>
  <%= form.submit "登録",class:'btn btn-primary '%>
<% end %>
<br>
<%= link_to "タスク一覧へ",tasks_path, class:'btn btn-info'%>