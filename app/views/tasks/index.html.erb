<% if flash.notice.present? %>
  <%= flash.notice %>
<% end %>
<h1>タスク一覧</h1>
  <table class="table">
    <thead>
      <tr>
        <th>タスク名</th>
        <th>タスク詳細</th>
        <th>詳細確認</th>
      </tr>
    </thead>
    <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= link_to"詳細",task_path(task.id),class:'btn btn-secondary' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "新規作成", new_task_path, class:'btn btn-primary'%>
