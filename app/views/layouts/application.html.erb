<!DOCTYPE html>
<html>
  <head>
    <title>EverleafExam</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>
  <body>
    <div class="header">
      <nav class="navbar navbar-expand navbar-light bg-info fixed-top ">
      <span class="navbr-brand">Everleaf</span>
      <% if logged_in?%>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active"><%= link_to "プロフィール", user_path(current_user.id), class:'nav-link' %></li>
          <li class="nav-item active"><%= link_to "ログアウト", session_path(current_user.id),method: :delete, class:'nav-link'%></li>
          <% if current_user.admin?%>
            <li class="nav-item active"><%= link_to "管理者画面へ",admin_users_path, class:'nav-link'%></li>
          <% end %>
        </ul>
      <% else %>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active"><%= link_to "サインアップ" ,new_user_path, class:'nav-link' %></li>
            <li class="nav-item active"><%= link_to "ログイン", new_session_path, class:'nav-link'%></li>
          </ul>
      <% end %>
    </div>
    <div class="container">
      <%= yield %>
    </div>
    <div class="footer">
      <nav class="navbar nabvar-expand navbar-light bg-dark ">
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>
